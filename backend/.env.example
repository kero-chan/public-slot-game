# Application Settings
APP_ENV=development
APP_ADDR=:8080
APP_NAME=SlotMachine

# Database Settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_NAME=slotmachine
DB_SSL_MODE=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Settings (optional but recommended)
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_ENABLED=true

# JWT Settings
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRATION_HOURS=24
# Service token for service-to-service auth (never expires)
# Used by internal services
SERVICE_TOKEN=your-service-token-here

# Logging
LOG_LEVEL=debug
LOG_FORMAT=json
LOG_SQL_THRESHOLD_MILLI_SECONDS=500
LOG_SQL_PARAMETERIZED_QUERIES=false

# CORS Settings
CORS_ALLOWED_ORIGINS=http://localhost:5173,http://localhost:3000
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Origin,Content-Type,Accept,Authorization,X-Game-ID

# Rate Limiting
RATE_LIMIT_SPIN=10
RATE_LIMIT_GENERAL=100

# Game Settings
MIN_BET=1.00
MAX_BET=1000.00
BET_STEP=1.00
DEFAULT_BALANCE=100000.00

# RTP & Mathematics
TARGET_RTP=96.5
MAX_WIN_MULTIPLIER=25000

# Storage Settings
# Provider: "minio" for local/dev, "gcs" for Google Cloud Storage in production
STORAGE_PROVIDER=minio
# MinIO settings (only for STORAGE_PROVIDER=minio)
STORAGE_ENDPOINT=localhost:9000
STORAGE_ACCESS_KEY=minioadmin
STORAGE_SECRET_KEY=minioadmin
# Common settings
STORAGE_BUCKET=slot-assets
STORAGE_USE_SSL=false
# Public URL for accessing assets
# For MinIO: http://localhost:9000
# For GCS: https://storage.googleapis.com
STORAGE_PUBLIC_URL=http://localhost:9000

PF_ENCRYPTION_KEY=provablyfair-dev-key-32bytes!!!!
